@model MundoPC1.Models.RegisterViewModel
@{
    var listado = new List<SelectListItem>() {
        new SelectListItem()
        {
            Text = "Ciudad de México",
            Value = "Ciudad de México"
        },
        new SelectListItem()
        {
            Text = "Estado de México",
            Value = "Estado de México",
        }
    };
}
    <div class="container-fluid text-white text-center pt-4">
        <div class="row mt-5 justify-content-center align-items-center">
            <div class="col-sm-4 text-center">
                <div class="col-12 user-img">
                    <img src="~/img/avatar.png" alt="">
                    <h3>Crear nueva cuenta</h3>
                </div>
                <div class="row">
                    <div class="col">
                        <section class="shadow-form">
                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-12 mb-1">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="">
                                    @*Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                                    <label>Contraseña</label>
                                    <div class="col-md-12 mb-1">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div>
                                    @*Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 mb-1 control-label" })*@
                                    <label>Confirmar contraseña</label>
                                    <div class="col-md-12 mb-4">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                               
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <button type="submit" value="Registrarse" class="btn btn-primary">Registrarse</button>
                                    </div>
                                </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </div>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
