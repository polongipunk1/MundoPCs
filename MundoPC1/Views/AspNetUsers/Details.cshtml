@model MundoPC1.Models.AspNetUsers

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid text-white text-center pt-4">
        <div class="row mt-5 justify-content-center align-items-center">
            <div class="col-sm-4 text-center">
                <div class="col-12 user-img">
                    <img src="~/img/avatar.png" alt="">
                    <h3>Detalle del usuario</h3>
                </div>
                <div class="row">
                    <div class="col">
                        <section class="shadow-form p-2">
                            <div class="">
                                @Html.LabelFor(m => m.Nombre, new { @class = "col-md-12 control-label font-weight-bold" })
                                <div class="col-md-12 mb-1 form-control">
                                    @Html.DisplayFor(model => model.Nombre)
                                </div>
                            </div>
                            <div class="">
                                @Html.LabelFor(m => m.Apellidos, new { @class = "col-md-12 control-label font-weight-bold" })
                                <div class="col-md-12 mb-1 form-control">
                                    @Html.DisplayFor(model => model.Apellidos)
                                </div>
                            </div>
                            <div class="">
                                @Html.LabelFor(m => m.UserName, new { @class = "col-md-12 control-label font-weight-bold" })
                                <div class="col-md-12 mb-1 form-control">
                                    @Html.DisplayFor(model => model.UserName)
                                </div>
                            </div>
                            <div class="">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label font-weight-bold" })
                                <div class="col-md-12 mb-1 form-control">
                                    @Html.DisplayFor(model => model.Email)
                                </div>
                            </div>
                            <div class="">
                                @Html.LabelFor(m => m.Direccion, new { @class = "col-md-12 control-label font-weight-bold" })
                                <div class="col-md-12 mb-1 form-control">
                                    @Html.DisplayFor(model => model.Direccion)
                                </div>
                            </div>
                            <div class="">
                                @Html.LabelFor(m => m.Colonia, new { @class = "col-md-12 control-label font-weight-bold" })
                                <div class="col-md-12 mb-1 form-control">
                                    @Html.DisplayFor(model => model.Colonia)
                                </div>
                            </div>
                            <div class="">
                                @Html.LabelFor(m => m.Region, new { @class = "col-md-12 control-label font-weight-bold" })
                                <div class="col-md-12 mb-1 form-control">
                                    @Html.DisplayFor(model => model.Region)
                                </div>
                            </div>
                            <div class="">
                                @Html.LabelFor(m => m.CP, new { @class = "col-md-12 control-label font-weight-bold" })
                                <div class="col-md-12 mb-1 form-control">
                                    @Html.DisplayFor(model => model.CP)
                                </div>
                            </div>
                            <div class="">
                                @Html.LabelFor(m => m.Telefono, new { @class = "col-md-12 control-label font-weight-bold" })
                                <div class="col-md-12 mb-1 form-control">
                                    @Html.DisplayFor(model => model.Telefono)
                                </div>
                            </div>

                            <div class="form-group pt-3">
                                <label class="col-md-offset-2 col-md-12">@Html.ActionLink("Editar usuario", "Edit", new { id = Model.Id }, new { @class="btn btn-lg btn-outline-warning btn-block" })</label>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-12">
                                    @Html.ActionLink("Regresar a la lista", "Index", null, new { @class = "btn btn-lg btn-outline-info btn-block" })
                                </div>
                            </div>

                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>         
