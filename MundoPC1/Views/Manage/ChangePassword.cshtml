@model MundoPC1.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}


<div class="container-fluid text-white pt-4 text-center">
    <h2>Cambia tu contraseña</h2>
    <div class="row mt-5 justify-content-center align-items-center">
        <div class="col-sm-4 text-center">
            <div class="row">
                <div class="col">
                    <section id="loginForm" class="shadow-form p-2">
                        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="">
                                @*Html.LabelFor(m => m.OldPassword, new { @class = "col-md-12 control-label" })*@
                                <label class="col-md-12 control-label">Contraseña actual</label>
                                <div class="col-md-12 mb-1">
                                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control text-center font-weight-bold", @placeholder = "Ingrese su contraseña" })
                                </div>
                            </div>
                            <div class="">
                                @*Html.LabelFor(m => m.NewPassword, new { @class = "col-md-12 control-label" })*@
                                <label class="col-md-12 control-label">Nueva contraseña</label>
                                <div class="col-md-12 mb-1">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control text-center font-weight-bold", @placeholder = "Ingrese una contraseña" })
                                </div>
                            </div>
                            <div class="">
                                @*Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })*@
                                <label class="col-md-12 control-label">Confirmar nueva contraseña</label>
                                <div class="col-md-12 mb-1">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-center font-weight-bold", @placeholder = "Ingrese una contraseña" })
                                </div>
                            </div>                          
                            <div class="form-group">
                                <div class="col-md-12 pt-3">
                                    <button type="submit" value="Cambiar contraseña" class="btn btn-warning">Cambiar contraseña</button>
                                </div>
                            </div>
                        }
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
